{% extends '/base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
    <div class="container gap-2">
        <div class="row justify-content-center">
            <div class="card p-0 w-auto mt-2">
                <img src="{{ vehicle.picturePath }}" class="card-img-top" alt="vehicle picture">
                <div class="card-body p-2">
                    <h1 class="card-title text-center">
                        {{ vehicle.model.brand.name }}
                        {{ vehicle.model.name }}
                    </h1>
                    <table class="mb-2 table">
                        <tr>
                            <th class="w-25">Model</th>
                            <td class="w-50">{{ vehicle.model.name }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Brand</th>
                            <td class="w-50">{{ vehicle.model.brand.name }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Type</th>
                            <td class="w-50">{{ vehicle.type.name }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Capacity</th>
                            <td class="w-50">{{ vehicle.capacity }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Kilometers Count</th>
                            <td class="w-50">{{ vehicle.numberKilometers }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Plate Number</th>
                            <td class="w-50">{{ vehicle.numberPlate }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Price</th>
                            <td class="w-50">{{ vehicle.price }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Years Old</th>
                            <td class="w-50">{{ vehicle.year }}</td>
                        </tr>
                    </table>
                    <a href="{{ path('edit_vehicle', {'id': vehicle.id}) }}"
                       class="btn btn-success w-100">Edit Vehicle</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
